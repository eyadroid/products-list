{
    "require": {
        "php": "^7.0",
        "vlucas/phpdotenv": "^5.2",
        "rakit/validation": "^1.4",
        "altorouter/altorouter": "^2.0",
        "doctrine/orm": "2.4.8",
        "doctrine/common": "2.5.0"
    },
    "autoload": {
        "psr-4": {
          "Controllers\\":"./controllers/",
          "Entities\\":"./entities/",
          "Utils\\":"./utils/",
          "Services\\":"./services",
          "Rules\\": "./rules"
        }
    },
    "scripts": {
        "start" : [
            "php -S localhost:3300 -t public"
        ],
        "beautify": [
            "php vendor/bin/phpcbf ./config ./controllers ./public"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    }
}
